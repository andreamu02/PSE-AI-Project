<resources>
    <style name="LightStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightBrown</item>
        <item name="colorPrimaryDark">@color/brownWhite</item>

        <!-- Stile del testo -->
        <item name="android:textColor">@color/black</item>

        <!-- Stile dei pulsanti -->
        <item name="buttonStyle">@style/CustomButtonLight</item>
    </style>

    <style name="CustomButtonLight" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item> <!-- Imposta la dimensione del testo -->
    </style>

    <style name="DarkStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightGrey</item>
        <item name="colorPrimaryDark">@color/lightGrey</item>

        <!-- Stile del testo -->
        <item name="android:textColor">@color/white</item>

        <!-- Stile dei pulsanti -->
        <item name="buttonStyle">@style/CustomButtonDark</item>
    </style>
    <!-- Stile personalizzato per i pulsanti -->
    <style name="CustomButtonDark" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>