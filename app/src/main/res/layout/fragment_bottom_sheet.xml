<!-- bottom_sheet_modal_layout.xml -->

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titolo del modale -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/impostazioni_modello"
            android:textSize="18sp"
            android:padding="16dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <!-- Prima riga -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/threshold_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/treshold"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/first_param_controls"/>

            <LinearLayout
                android:id="@+id/first_param_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/first_param_minus"
                    android:background="@color/gray"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/minus_button_first"
                    android:src="@drawable/baseline_minus_24" />

                <TextView
                    android:id="@+id/first_param_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="2"
                    android:gravity="center"
                    android:text="@string/start_treshold_value"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/first_param_plus"
                    android:background="@color/gray"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/plus_button_first"
                    android:src="@drawable/baseline_plus_24" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Seconda riga -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/second_param_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/max_rettangoli"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/second_param_controls"/>

            <LinearLayout
                android:id="@+id/second_param_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/second_param_minus"
                    android:background="@color/gray"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/minus_button_second"
                    android:src="@drawable/baseline_minus_24" />

                <TextView
                    android:id="@+id/second_param_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="2"
                    android:gravity="center"
                    android:text="@string/start_rectangle_value"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/second_param_plus"
                    android:background="@color/gray"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/plus_button_second"
                    android:src="@drawable/baseline_plus_24" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Terza riga -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/third_param_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/delegato"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/third_param_spinner"/>

                <Spinner
                    android:id="@+id/third_param_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/delegati"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/third_param_label"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Close Button -->
        <Button
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/chiudi"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="16dp"
            android:gravity="center" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>